generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Peminjaman {
  idPeminjaman      Int      @id @default(autoincrement())
  nomorPeminjaman   String
  namaPeminjam      String
  statusPegawai     StatusPegawai
  nip               String
  ikmm              Int
  namaBarang        String
  unit              Int
  kategori          Kategori
  jumlahPinjam      Int
  tanggalPinjam     DateTime
  tanggalKembali    DateTime?
  tujuan            String
  keterangan        String?
  statusPeminjaman  StatusPeminjaman
  foto              String?
}

enum StatusPegawai {
  PPPK
  KI
  PNS
  Magang
}

enum Kategori {
  Laptop
  Monitor
  Printer
  TV
  Peripheral
  Internet
  Lainnya
}

enum StatusPeminjaman {
  Aktif
  Selesai
  Terlambat
}
